<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_item_history"
        android:padding="15dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_item_history"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/roundImageView"
            android:background="@drawable/apple"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_item_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apple"
                android:textSize="40sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ripeness"
                android:textColor="#000000"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/prog_item_history"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/bg_progress"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginTop="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
                <TextView
                    android:id="@+id/txt_item_prog_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/prog_item_history"
                    app:layout_constraintEnd_toEndOf="@+id/prog_item_history"
                    app:layout_constraintStart_toStartOf="@+id/prog_item_history"
                    app:layout_constraintTop_toTopOf="@+id/prog_item_history" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>